<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="CoreTheme.AdvancedFinance" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/core_md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/core_md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/core_md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/core_md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/core_md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/core_md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/core_md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/core_md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/core_md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/core_md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/core_md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/core_md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/core_md_theme_light_error</item>
        <item name="colorErrorContainer">@color/core_md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/core_md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/core_md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/core_md_theme_light_background</item>
        <item name="colorOnBackground">@color/core_md_theme_light_onBackground</item>
        <item name="colorSurface">@color/core_md_theme_light_surface</item>
        <item name="colorOnSurface">@color/core_md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/core_md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/core_md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/core_md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/core_md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/core_md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/core_md_theme_light_inversePrimary</item>
    </style>

    <style name="CoreStyleTextSize24Bold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CoreStyleTextSize32Bold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CoreStyleTextSize12Bold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/core_md_theme_light_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CoreStyleTextSize16Regular" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/core_md_theme_light_shadow</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CoreStyleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/core_md_theme_light_onPrimary</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>
</resources>