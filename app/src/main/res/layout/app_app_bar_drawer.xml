<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.advancedfinance.DrawerActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/CoreTheme.AdvancedFinance.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/CoreTheme.AdvancedFinance.PopupOverlay"
            app:titleTextColor="@color/core_md_theme_light_onPrimary"
            app:itemIconTint="@color/core_md_theme_light_onPrimary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/app_content_drawer" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>